<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jsoj.app.jsoj.dao.UserDao">

    <resultMap id="BaseResultMap" type="User">
        <result column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="niconame" property="niconame" />
        <result column="email" property="email" />
        <result column="score" property="score" />
        <result column="regTime" property="regTime" />
        <result column="status" property="status" />
    </resultMap>

    <sql id="Base_Column_List">
		id, username, password, niconame, email, score, regTime, status
	</sql>

    <select id="getUserById" resultType="User" parameterType="int">
        select
        <include refid="Base_Column_List"/>
        from user
        WHERE id = #{id}
    </select>

    <select id="getUserByUserName" resultType="User" parameterType="string">
        select
        <include refid="Base_Column_List"/>
        from user
        where username = #{username}
    </select>

    <insert id="regNewUser" parameterType="User" useGeneratedKeys="true" keyColumn="id" keyProperty="id" >
        insert into
         user(username,password,niconame,email,regTime)
        values (#{username},#{password},#{niconame},#{email},NOW());
    </insert>

    <update id="updateUser" parameterType="User">
        update user set niconame = #{niconame}, password = #{password}, score = #{score}, status = #{status} WHERE id = #{id}
    </update>

    <select id="getUser" resultType="User">
        select
        <include refid="Base_Column_List"/>
        from user WHERE username = #{username} AND password = #{password}
    </select>

    <select id="getUserRank" resultType="int">
        SELECT rowNo FROM (SELECT id,(@rowNum:=@rowNum+1) AS rowNo
        FROM user,(SELECT(@rowNum:=0)) b ORDER BY score DESC) c
        WHERE id = #{id};
    </select>

    <select id="getUserRankList" resultType="com.jsoj.app.jsoj.vo.UserRank">
        SELECT id,username,niconame,score,rowNo AS rankNum FROM (SELECT *,(@rowNum:=@rowNum+1) AS rowNo
        FROM user,(SELECT(@rowNum:=0)) b ORDER BY score DESC) c LIMIT 0,10
    </select>

</mapper>